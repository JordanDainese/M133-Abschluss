<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logged in</title>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <h1>Your Leaderboards</h1>
    <ul>
        <% leaderboards.forEach(function (leaderboards) { %>
            <li>
                <a class="leaderboardButton" href="/leaderboard/<%= leaderboards._id %>" id="button" for="button"
                    name="button">
                    <%= leaderboards.title %>
                </a>
            </li>
            <% }) %>
                <li> <a class=leaderboardButton href="/create">Add Leaderboard</a></li>
    </ul>
    <div>
        <form action="/filter" method="post">
            <label for="title">Filter by Title</label>
            <input type="text" id="title" name="title">
            <button>Filter</button>
        </form>
        <ul>
            <li><a href="/main">Remove Filter</a></li>
            <li><a href="/logout">Log out</a></li>
        </ul>
    </div>
</body>

</html>